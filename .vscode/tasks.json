{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "tscWatch",
            "command": "tsc",
            "type": "shell",
            "args": ["-w", "-p","./TypeScript"],
            "presentation": {
                "reveal": "silent"
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        }
    ]
}